<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/NFC_txt_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/input_txt"
            android:text="NFC Code : "
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20dp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/blanck_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/input_txt"
            android:layout_weight="0.99"
            android:text="Blank"
            android:textSize="18sp" />

        <Button
            android:id="@+id/nfc_scan_btn_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NFC" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.52"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/content_txt_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/input_txt"
            android:layout_weight="1"
            android:text="Content     :"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20dp"
            android:textStyle="normal|bold" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:layout_weight="12.02"
            tools:context=".NestedScrollViewActivity">

            <EditText
                android:id="@+id/input_txt_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_toEndOf="@+id/content_txt_check"
                android:layout_toRightOf="@+id/content_txt_check"
                android:layout_weight="33.42"
                android:ems="10"
                android:hint="Input Content ..."
                android:inputType="textMultiLine"
                android:textColor="?android:attr/colorEdgeEffect"
                android:textStyle="normal|italic" />
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.42"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/picture_btn_check"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="Picture Choice" />

        <ImageView
            android:id="@+id/imageView_check"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_weight="0.75"
            android:src="@drawable/totoro" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/modi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="modify" />

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"

            android:text="delete" />
    </LinearLayout>
</LinearLayout>